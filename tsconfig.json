{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*.ts",
      "scripts/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ],
    "ts-node": {
      "esm": true,
      "experimentalSpecifiers": true
    }
  } 